<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivImagen"
        tools:background="@color/fondo"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvNombre"/>
    <TextView
        tools:text="Nombre"
        android:id="@+id/tvNombre"
        android:layout_margin="10dp"
        android:background="@color/fondo"
        android:textColor="@color/letraprincipal"
        android:fontFamily="@font/simpsonfont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvHistoria"
        app:layout_constraintTop_toBottomOf="@+id/ivImagen"
        />
    <TextView
        tools:text="Historia"
        android:id="@+id/tvHistoria"
        android:layout_margin="10dp"
        android:background="@color/fondo"
        android:textColor="@color/letraprincipal"
        android:fontFamily="@font/simpsonfont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvEstado"
        app:layout_constraintTop_toBottomOf="@+id/tvNombre"
        />
    <TextView
        tools:text="Estado"
        android:id="@+id/tvEstado"
        android:layout_margin="10dp"
        android:background="@color/fondo"
        android:textColor="@color/letraprincipal"
        android:fontFamily="@font/simpsonfont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvHistoria"
        app:layout_constraintTop_toBottomOf="@+id/tvGenero"
        />
    <TextView
        tools:text="Genero"
        android:id="@+id/tvGenero"
        android:layout_margin="10dp"
        android:background="@color/fondo"
        android:textColor="@color/letraprincipal"
        android:fontFamily="@font/simpsonfont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvOcupacion"
        app:layout_constraintTop_toBottomOf="@+id/tvEstado"
        />
    <TextView
        tools:text="ocupacion"
        android:id="@+id/tvOcupacion"
        android:layout_margin="10dp"
        android:background="@color/fondo"
        android:textColor="@color/letraprincipal"
        android:fontFamily="@font/simpsonfont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGenero"
        />





</androidx.constraintlayout.widget.ConstraintLayout>